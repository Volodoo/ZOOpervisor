<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="548.0" prefWidth="871.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.paz.animal.AnimalViewController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>

                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" text="User">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="roleLabel" text="Role" textFill="#666666">
                            <font><Font size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Region prefWidth="20.0" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" text="Filter:" />
                        <ComboBox fx:id="speciesFilterComboBox" prefWidth="130.0" />
                    </children>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Zvieratá">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addAnimalButton" mnemonicParsing="false" onAction="#addAnimalButtonAction" text="Pridaj Zviera" />
                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBackButtonAction" text="Späť" />
            </children>

            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </HBox>

        <TableView fx:id="animalsTable" prefHeight="412.0" prefWidth="779.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nicknameCol" prefWidth="100.0" text="Prezývka" />
                <TableColumn fx:id="speciesCol" prefWidth="100.0" text="Druh" />
                <TableColumn fx:id="sexCol" prefWidth="75.0" text="Pohlavie" />
                <TableColumn fx:id="birthdayCol" prefWidth="100.0" text="Dátum narodenia" />
                <TableColumn fx:id="lastCheckCol" prefWidth="120.0" text="Posledná prehliadka" />
                <TableColumn fx:id="enclosureCol" prefWidth="100.0" text="Výbeh" />
                <TableColumn fx:id="statusCol" prefWidth="75.0" text="Stav" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
