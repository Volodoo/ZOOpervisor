            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
        <GridPane vgap="15.0" hgap="10.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
