<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="548.0" prefWidth="871.0" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.paz.enclosure.EnclosureViewController">

    <children>
        <HBox fx:id="occupationHbox" alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>

                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" text="User">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="roleLabel" text="Role" textFill="#666666">
                            <font><Font size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Region prefWidth="20.0" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" text="Filter:" />
                        <ComboBox fx:id="zoneFilterComboBox" prefWidth="130.0" />
                    </children>
                </HBox>

                <Region prefHeight="50.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />

                <Label text="%menu.enclosures">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addEnclosureButton" mnemonicParsing="false" onAction="#addEnclosureButtonAction" text="%add" />
                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBackButtonAction" text="%back" />
            </children>

            <VBox.margin>
                <Insets bottom="5.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>

        <TableView fx:id="enclosuresTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="250.0" text="%name" />
                <TableColumn fx:id="zoneCol" prefWidth="150.0" text="%zone" />
                <TableColumn fx:id="lastMaintainanceCol" prefWidth="150.0" text="%lastMaintanence" />
                <TableColumn fx:id="animalsCountCol" prefWidth="80.0" text="%menu.animals" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
