<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="548.0" prefWidth="959.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.paz.task.TaskViewController">

    <children>
        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="80.0" prefWidth="960.0" spacing="15.0" VBox.vgrow="NEVER">
            <children>

                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" minHeight="-Infinity" minWidth="-Infinity" text="User" VBox.vgrow="ALWAYS">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="roleLabel" minWidth="-Infinity" text="Role" textFill="#666666" VBox.vgrow="ALWAYS">
                            <font><Font size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Region prefWidth="20.0" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" minHeight="-Infinity" minWidth="-Infinity" text="Filter:" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="userFilterComboBox" minHeight="-Infinity" minWidth="-Infinity" prefWidth="150.0" promptText="Podľa používateľa" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            <TextField fx:id="searchTextField" onAction="#OnActionSearchTextField" prefHeight="26.0" prefWidth="151.0" promptText="%search" />

                <Label fx:id="taskLabel" minWidth="-Infinity" text="%menu.tasks" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <Region maxWidth="-Infinity" prefHeight="70.0" prefWidth="46.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteTaskButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteTaskButtonAction" text="%deleteTask" HBox.hgrow="ALWAYS" />

                <Button fx:id="finishTaskButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#finishTaskButtonAction" text="%finishTask" HBox.hgrow="ALWAYS" />
                <Button fx:id="addTaskButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#addTaskButtonAction" text="%addTask" HBox.hgrow="ALWAYS" />
                <Button fx:id="goBackButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#goBack" text="%back" HBox.hgrow="ALWAYS" />
            </children>

            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>

        <TableView fx:id="taskTable" minHeight="-Infinity" minWidth="-Infinity" prefHeight="446.0" prefWidth="928.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="150.0" text="%name" />
                <TableColumn fx:id="descriptionCol" prefWidth="300.0" text="%description" />
                <TableColumn fx:id="deadlineCol" prefWidth="120.0" text="%deadline" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="%status" />
                <TableColumn fx:id="userCol" prefWidth="150.0" text="%user" />
                <TableColumn fx:id="animalsCol" prefWidth="150.0" text="%menu.animals" />
                <TableColumn fx:id="enclosuresCol" prefWidth="150.0" text="%menu.enclosures" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
