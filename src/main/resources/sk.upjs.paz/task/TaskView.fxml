<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.paz.task.TaskViewController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>

                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" text="User">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="roleLabel" text="Role" textFill="#666666">
                            <font><Font size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Region prefWidth="20.0" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" text="Filter:" />
                        <ComboBox fx:id="userFilterComboBox" prefWidth="150.0" promptText="Podľa používateľa" />
                    </children>
                </HBox>

                <Region maxWidth="-Infinity" prefHeight="70.0" prefWidth="90.0" HBox.hgrow="ALWAYS" />

                <Label fx:id="taskLabel" text="Úlohy">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <Region maxWidth="-Infinity" prefHeight="70.0" prefWidth="130.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteTaskButton" mnemonicParsing="false" onAction="#deleteTaskButtonAction" text="Vymaž Úlohu" />

                <Button fx:id="finishTaskButton" mnemonicParsing="false" onAction="#finishTaskButtonAction" text="Dokončiť Úlohu" />
                <Button fx:id="addTaskButton" mnemonicParsing="false" onAction="#addTaskButtonAction" text="Pridaj úlohu" />
                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBack" text="Späť" />
            </children>

            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>

        <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="150.0" text="Názov" />
                <TableColumn fx:id="descriptionCol" prefWidth="300.0" text="Popis úlohy" />
                <TableColumn fx:id="deadlineCol" prefWidth="120.0" text="Deadline" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="userCol" prefWidth="150.0" text="User" />
                <TableColumn fx:id="animalsCol" prefWidth="150.0" text="Zvieratá" />
                <TableColumn fx:id="enclosuresCol" prefWidth="150.0" text="Výbehy" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
