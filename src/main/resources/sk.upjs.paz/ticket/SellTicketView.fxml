<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="300.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sk.upjs.paz.ticket.SellTicketController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>

                <Label text="Predaj lístka">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="userNameLabel" text="User">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <Label fx:id="roleLabel" text="Role" textFill="#666666">
                    <font><Font size="12.0" /></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBack" text="Späť" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>

                <VBox maxWidth="-Infinity" prefHeight="176.0" prefWidth="302.0" spacing="25.0">
                    <children>

                        <Label text="Vyberte typ lístka:">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <CheckBox fx:id="childCheckBox" mnemonicParsing="false" text="Dieťa">
                            <VBox.margin>
                                <Insets left="130.0" />
                            </VBox.margin>
                        </CheckBox>

                        <CheckBox fx:id="seniorStudentCheckBox" mnemonicParsing="false" text="Študent/Senior">
                            <VBox.margin>
                                <Insets left="130.0" />
                            </VBox.margin>
                        </CheckBox>

                        <CheckBox fx:id="adultCheckBox" mnemonicParsing="false" text="Dospelý">
                            <VBox.margin>
                                <Insets left="130.0" />
                            </VBox.margin>
                        </CheckBox>

                    </children>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </VBox>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="sellButton" mnemonicParsing="false" onAction="#sellTicket" prefHeight="30.0" prefWidth="100.0" text="Predať" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>