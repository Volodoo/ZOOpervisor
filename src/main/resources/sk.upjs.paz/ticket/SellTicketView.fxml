<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml" fx:controller="sk.upjs.paz.ticket.SellTicketController" prefWidth="400.0" prefHeight="400.0">
    <children>
        <!-- Užívateľské meno a rola -->
        <Label fx:id="userNameLabel" text="User Name" prefWidth="200.0" />
        <Label fx:id="roleLabel" text="Role" prefWidth="200.0" />

        <HBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Dieťa" prefWidth="100.0" />
            <Spinner fx:id="childSpinner" prefWidth="80.0" />
            <Label fx:id="childTotalPrice" text="Cena: 0 €" prefWidth="100.0" />
        </HBox>

        <HBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Študent/Senior" prefWidth="100.0" />
            <Spinner fx:id="seniorStudentSpinner" prefWidth="80.0" />
            <Label fx:id="seniorStudentTotalPrice" text="Cena: 0 €" prefWidth="100.0" />
        </HBox>

        <HBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Dospelý" prefWidth="100.0" />
            <Spinner fx:id="adultSpinner" prefWidth="80.0" />
            <Label fx:id="adultTotalPrice" text="Cena: 0 €" prefWidth="100.0" />
        </HBox>

        <!-- Celková cena -->
        <Label fx:id="totalPriceLabel" text="Celková cena: 0 €" prefWidth="200.0" />

        <!-- Tlačidlá pre akcie -->
        <Button text="Predať lístok" onAction="#sellTicket" prefWidth="200.0" />
        <Button text="Späť" onAction="#goBack" prefWidth="200.0" />

        <!-- Správa o úspešnom predaji -->
        <Label fx:id="successLabel" text="" textFill="green" visible="false" prefWidth="200.0" />
    </children>
</VBox>