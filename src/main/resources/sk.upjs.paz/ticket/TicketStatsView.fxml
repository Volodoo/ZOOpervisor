<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.embed.swing.SwingNode?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="600" minWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.paz.ticket.TicketStatsController">

    <!-- ===== TOP PANEL ===== -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">

            <!-- Buttons -->
            <HBox spacing="10">
                <Button fx:id="cashierSalesButton" text="%statistic.option1" />
                <Button fx:id="typeSalesButton" text="%statistic.option2" />
            </HBox>

            <!-- Info label -->
            <Label fx:id="statsLabel" text="%showPeriodAndTypeOfDisplay" wrapText="true" />

            <!-- Filters -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="%period" />
                <DatePicker fx:id="fromDatePicker" promptText="%from" />
                <DatePicker fx:id="toDatePicker" promptText="%to" />

                <Label text="%display" />
                <ComboBox fx:id="aggregationComboBox" prefWidth="180" promptText="%period.day" />
            </HBox>
        </VBox>
    </top>

    <!-- ===== CENTER (CHART) ===== -->
    <center>
        <SwingNode fx:id="chartContainer" />
    </center>

</BorderPane>
