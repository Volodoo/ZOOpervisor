<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.paz.ticket.TicketViewController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>

                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" text="User">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label fx:id="roleLabel" text="Role" textFill="#666666">
                            <font><Font size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <Region prefWidth="20.0" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" text="Filter:" />
                        <ComboBox fx:id="cashierFilterComboBox" prefWidth="130.0" />
                    </children>
                </HBox>

                <Region maxWidth="-Infinity" prefWidth="150.0" HBox.hgrow="ALWAYS" />

                <Label text="Lístky">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region maxWidth="-Infinity" prefWidth="250.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="showStatisticButton" mnemonicParsing="false" onAction="#showStatisticButton" text="Štatistika" />

                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBack" text="Späť" />
            </children>

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>

        <TableView fx:id="ticketTable" prefHeight="338.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="typeCol" prefWidth="100.0" text="Typ lístka" />
                <TableColumn fx:id="purchaseDateTimeCol" prefWidth="150.0" text="Čas zakúpenia" />
                <TableColumn fx:id="priceCol" prefWidth="100.0" text="Cena" />
                <TableColumn fx:id="cashierCol" prefWidth="150.0" text="Predavač(ka)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
