<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.paz.user.UserViewController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" VBox.vgrow="NEVER">
            <children>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="filterLabel" text="Filter:" />
                        <ComboBox fx:id="filterComboBox" prefWidth="130.0" />
                    </children>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Používatelia">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#addUser" text="Pridaj usera" />
                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBack" text="Späť" />
            </children>

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>

        <TableView fx:id="userTable" prefHeight="529.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="firstNameCol" prefWidth="100.0" text="Meno" />
                <TableColumn fx:id="lastNameCol" prefWidth="100.0" text="Priezvisko" />
                <TableColumn fx:id="genderCol" prefWidth="75.0" text="Pohlavie" />
                <TableColumn fx:id="birthdayCol" prefWidth="100.0" text="Dátum Narodenia" />
                <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="roleCol" prefWidth="100.0" text="Rola" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TableView>
    </children>
</VBox>